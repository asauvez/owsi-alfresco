<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.core.parents</groupId>
		<artifactId>owsi-core-parent-maven-configuration-common</artifactId>
		<version>0.9.8</version>
	</parent>

	<groupId>fr.openwide.alfresco</groupId>
	<artifactId>owsi-alfresco</artifactId>
	<version>0.2.8-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>OWSI Alfresco</name>
	<description>Capitalisation des développements utilisés sur les projets Alfresco</description>

	<properties>
		<owsi-alfresco.jgitflow-maven-plugin.version>1.0-m5.1</owsi-alfresco.jgitflow-maven-plugin.version>
	</properties>

	<modules>
		<module>owsi-alfresco-parent</module>
		<module>owsi-alfresco-api</module>
		<module>owsi-alfresco-app</module>
		<module>owsi-alfresco-repo</module>
		<module>owsi-alfresco-component</module>
	</modules>

	<distributionManagement>
		<repository>
			<id>nexus-owsi-alfresco</id>
			<name>OWSI Alfresco</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-alfresco</url>
		</repository>
		<snapshotRepository>
			<id>nexus-owsi-alfresco-snapshots</id>
			<name>OWSI Alfresco Snapshots</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-alfresco-snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<issueManagement>
		<system>GitLab</system>
		<url>https://gitlab.openwide.fr/open-wide/alfresco-tools-owsi/issues</url>
	</issueManagement>

	<ciManagement>
		<system>Jenkins</system>
		<url>https://projects.openwide.fr/services/ci/java/jenkins/view/alfresco/</url>
	</ciManagement>

	<scm>
		<developerConnection>scm:git:git@git.projects.openwide.fr:open-wide/alfresco-tools-owsi.git</developerConnection>
		<url>https://gitlab.openwide.fr/open-wide/alfresco-tools-owsi</url>
		<tag>HEAD</tag>
	</scm>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>external.atlassian.jgitflow</groupId>
					<artifactId>jgitflow-maven-plugin</artifactId>
					<version>${owsi-alfresco.jgitflow-maven-plugin.version}</version>
					<configuration>
						<flowInitContext>
							<masterBranchName>master</masterBranchName>
							<developBranchName>dev</developBranchName>
							<featureBranchPrefix>ft-</featureBranchPrefix>
							<releaseBranchPrefix>rl-</releaseBranchPrefix>
							<hotfixBranchPrefix>hf-</hotfixBranchPrefix>
							<versionTagPrefix>v</versionTagPrefix>
						</flowInitContext>
						<noDeploy>true</noDeploy>
						<pullDevelop>true</pullDevelop>
						<pullMaster>true</pullMaster>
						<autoVersionSubmodules>true</autoVersionSubmodules>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
		<repository>
			<id>nexus-owsi-core</id>
			<name>OWSI Core</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>nexus-owsi-core-snapshots</id>
			<name>OWSI Core Snapshots</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core-snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>

	<organization>
		<name>Open Wide</name>
		<url>http://www.openwide.fr/</url>
	</organization>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

</project>
