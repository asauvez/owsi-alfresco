<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.core.parents</groupId>
		<artifactId>owsi-core-parent-base</artifactId>
		<version>0.8.6-SNAPSHOT</version>
	</parent>
	<groupId>fr.openwide.alfresco</groupId>
	<artifactId>owsi-alfresco</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>OWSI Alfresco</name>
	<description>Capitalisation des développements utilisés sur les projets Alfresco</description>

	<modules>
		<module>owsi-alfresco-app</module>
		<module>owsi-alfresco-query</module>
	</modules>

	<properties>
		<jdk.version>1.7</jdk.version>
		<!-- <alfresco.version>4.2.0</alfresco.version> -->
		<owsi-core.version>0.8.6-SNAPSHOT</owsi-core.version>
	</properties>

	<distributionManagement>
		<repository>
			<id>nexus-owsi-alfresco</id>
			<name>OWSI Alfresco</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-alfresco</url>
		</repository>
		<snapshotRepository>
			<id>nexus-owsi-alfresco-snapshots</id>
			<name>OWSI Alfresco Snapshots</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-alfresco-snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<issueManagement>
		<system>Trac</system>
		<url>https://projects.openwide.fr/services/git/trac/alfresco-tools/report</url>
	</issueManagement>

	<ciManagement>
		<system>Jenkins</system>
		<url>https://projects.openwide.fr/services/ci/java/jenkins/view/alfresco/</url>
	</ciManagement>

	<scm>
		<developerConnection>scm:git:ssh://git.projects.openwide.fr/gitroot/alfresco-tools/owsi-alfresco</developerConnection>
		<url>https://projects.openwide.fr/services/git/trac/alfresco-tools/browser/owsi-alfresco</url>
	</scm>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>fr.openwide.alfresco</groupId>
				<artifactId>owsi-alfresco-app-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>fr.openwide.alfresco</groupId>
				<artifactId>owsi-alfresco-app-web</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>fr.openwide.alfresco</groupId>
				<artifactId>owsi-alfresco-query-core</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<proc>none</proc>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
		<repository>
			<id>nexus-owsi-core</id>
			<name>OWSI Core</name>
			<url>http://projects.openwide.fr/services/nexus/content/repositories/owsi-core</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>nexus-owsi-core-snapshots</id>
			<name>OWSI Core Snapshots</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core-snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
		<repository>
			<id>alfresco-enterprise</id>
			<name>Alfresco Enterprise Artifacts</name>
			<url>https://artifacts.alfresco.com/nexus/content/groups/private</url>
		</repository>
	</repositories>

	<organization>
		<name>Open Wide</name>
		<url>http://www.openwide.fr/</url>
	</organization>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

</project>
