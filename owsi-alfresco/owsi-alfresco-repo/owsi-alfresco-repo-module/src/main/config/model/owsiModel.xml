<?xml version="1.0" encoding="UTF-8"?>
<model name="owsi:owsiModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<!--
		REMARQUE IMPORTANTE : Ce fichier sera à remplacer par celui issu du projet ONDE quand ce dernier
		sera livré. 
	 -->

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
	</imports>

	<namespaces>
		<namespace uri="http://openwide.fr/model/owsi" prefix="owsi" />
	</namespaces>

	<aspects>
		<aspect name="owsi:classifiable">
			<title>OWSI Classifiable</title>
			<description>Add to a node or declare it as mandatory-aspect in order to indicate trigger the classification of the node</description>
			<properties>
				<property name="owsi:classificationDate">
					<type>d:datetime</type>
				</property>
			</properties>
		</aspect>
		
		<aspect name="owsi:deleteIfEmpty">
			<title>OWSI Delete if empty</title>
			<description>A folder with the aspect will be deleted if their is no more child node.</description>
		</aspect>

		<aspect name="owsi:identifiable">
			<title>OWSI Identifiable</title>
			<properties>
				<property name="owsi:identifier">
					<type>d:qname</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>true</stored>
						<tokenised>false</tokenised>
					</index>
				</property>
			</properties>
		</aspect>
	</aspects>
</model>


