<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.alfresco</groupId>
		<artifactId>owsi-alfresco-parent-repo-component</artifactId>
		<version>0.8.6</version>
		<relativePath>../owsi-alfresco-parent-repo-component/pom.xml</relativePath>
	</parent>
	<artifactId>owsi-alfresco-parent-alfresco</artifactId>
	<packaging>pom</packaging>

	<name>OWSI Alfresco - Parent - Alfresco</name>
	<description>Base d'un alfresco</description>

	<dependencies>
		<dependency>
			<groupId>org.alfresco</groupId>
			<artifactId>alfresco-enterprise</artifactId>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		
		<dependency>
			<groupId>fr.openwide.alfresco</groupId>
			<artifactId>owsi-alfresco-repo-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.alfresco.aos-module</groupId>
			<artifactId>alfresco-aos-module</artifactId>
			<version>1.2.2</version>
			<type>amp</type>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.metaversant</groupId>
				<artifactId>share-site-creators-repo</artifactId>
				<version>0.0.7</version>
				<type>amp</type>
			</dependency>
			<dependency>
				<groupId>com.softwareloop</groupId>
				<artifactId>uploader-plus-repo</artifactId>
				<version>1.2</version>
			</dependency>
			<dependency>
				<groupId>de.fmaul</groupId>
				<artifactId>javascript-console-repo</artifactId>
				<version>0.6</version>
				<type>amp</type>
			</dependency>
			<dependency>
				<groupId>external.module.alfresco-outlook</groupId>
				<artifactId>alfresco-outlook-repository</artifactId>
				<version>2.1.0</version>
				<type>amp</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<finalName>${alfresco.webapp.name}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<overlays>
						<overlay>
							<groupId>org.alfresco</groupId>
							<artifactId>alfresco-enterprise</artifactId>
							<type>war</type>
						</overlay>
					</overlays>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>org.postgresql</groupId>
					<artifactId>postgresql</artifactId>
					<scope>runtime</scope>
				</dependency>
				<dependency>
					<groupId>de.fmaul</groupId>
					<artifactId>javascript-console-repo</artifactId>
					<type>amp</type>
				</dependency>
			</dependencies>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
						<excludes>
							<exclude>**/*.ori</exclude>
						</excludes>
					</resource>
					<resource>
						<directory>src/main/dev-resources</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
				<plugins>
					<plugin>
	 					<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<failOnMissingWebXml>false</failOnMissingWebXml>
							<overlays>
								<overlay>
									<groupId>org.alfresco</groupId>
									<artifactId>alfresco-enterprise</artifactId>
									<type>war</type>
								</overlay>
								<overlay>
									<groupId>de.fmaul</groupId>
									<artifactId>javascript-console-repo</artifactId>
									<type>amp</type>
								</overlay>
							</overlays>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<profile>
			<id>livraison</id>
			<activation>
				<property>
					<name>livraison</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
	 					<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<failOnMissingWebXml>false</failOnMissingWebXml>
							<overlays>
								<overlay>
									<groupId>org.alfresco</groupId>
									<artifactId>alfresco-enterprise</artifactId>
									<type>war</type>
								</overlay>
								<overlay>
									<groupId>org.alfresco.aos-module</groupId>
									<artifactId>alfresco-aos-module</artifactId>
									<type>amp</type>
								</overlay>
							</overlays>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
