<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.core.parents</groupId>
		<artifactId>owsi-core-parent-maven-configuration-common</artifactId>
		<version>0.9-SNAPSHOT</version>
		<relativePath />
	</parent>

	<groupId>fr.openwide.alfresco</groupId>
	<artifactId>owsi-alfresco-parent</artifactId>
	<version>0.2.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>OWSI Alfresco - Parent</name>
	<description>Définition des dépendances et plugins partagées par les autres projets et modules</description>

	<properties>
		<owsi-alfresco.alfresco.version>4.2.3.3</owsi-alfresco.alfresco.version>
	</properties>

	<modules>
		<module>owsi-alfresco-parent-bom</module>
		<module>owsi-alfresco-parent-app</module>
		<module>owsi-alfresco-parent-repo</module>
	</modules>

	<profiles>
		<profile>
			<activation>
				<property>
					<name>distribution</name>
					<value>owsi-alfresco-release</value>
				</property>
			</activation>
			<distributionManagement>
				<repository>
					<id>nexus-owsi-alfresco</id>
					<name>OWSI Alfresco</name>
					<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-alfresco</url>
				</repository>
				<snapshotRepository>
					<id>nexus-owsi-alfresco-snapshots</id>
					<name>OWSI Alfresco Snapshots</name>
					<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-alfresco-snapshots</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
	</profiles>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<proc>none</proc>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
		<repository>
			<id>nexus-owsi-core</id>
			<name>OWSI Core</name>
			<url>http://projects.openwide.fr/services/nexus/content/repositories/owsi-core</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>nexus-owsi-core-snapshots</id>
			<name>OWSI Core Snapshots</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core-snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
		<repository>
			<id>alfresco-enterprise</id>
			<name>Alfresco Enterprise Artifacts</name>
			<url>https://artifacts.alfresco.com/nexus/content/groups/private</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

</project>