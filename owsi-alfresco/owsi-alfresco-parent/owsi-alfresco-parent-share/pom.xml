<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.alfresco</groupId>
		<artifactId>owsi-alfresco-parent-share-component</artifactId>
		<version>0.8.3-SNAPSHOT</version>
		<relativePath>../owsi-alfresco-parent-share-component/pom.xml</relativePath>
	</parent>
	<artifactId>owsi-alfresco-parent-share</artifactId>
	<packaging>pom</packaging>
	
	<name>OWSI Alfresco - Parent - Share</name>
	
	<properties>
		<share.webapp.name>share</share.webapp.name>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>org.alfresco</groupId>
			<artifactId>share</artifactId>
			<type>war</type>
			<version>${owsi-alfresco.share.alfresco.version}</version>
			<scope>runtime</scope>
		</dependency>
		
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>${javax.servlet-api.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>jcl-over-slf4j</artifactId>
			<version>${jcl-over-slf4j.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.metaversant</groupId>
				<artifactId>share-site-creators-share</artifactId>
				<version>0.0.7</version>
				<type>amp</type>
			</dependency>
			<dependency>
				<groupId>com.softwareloop</groupId>
				<artifactId>uploader-plus-surf</artifactId>
				<version>1.2</version>
				<type>amp</type>
			</dependency>
			<dependency>
				<groupId>de.fmaul</groupId>
				<artifactId>javascript-console-share</artifactId>
				<version>0.6</version>
				<type>amp</type>
			</dependency>
			<dependency>
				<groupId>external.module.alfresco-outlook</groupId>
				<artifactId>alfresco-outlook-share</artifactId>
				<version>2.1.0</version>
				<type>amp</type>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<build>
		<finalName>${share.webapp.name}</finalName>
		<!-- http://docs.alfresco.com/5.1/tasks/install-share-troubleshooting.html -->

		<pluginManagement>
			<plugins>
				<!-- http://crunchify.com/how-to-fix-cannot-change-version-of-project-facet-dynamic-web-module-to-3-0-error-in-eclipse/ -->
				<plugin>
					<groupId>com.google.code.maven-replacer-plugin</groupId>
					<artifactId>replacer</artifactId>
					<version>1.5.3</version>
					<executions>
						<execution>
							<phase>prepare-package</phase>
							<goals>
								<goal>replace</goal>
							</goals>
						</execution>
					</executions>
					<configuration>
						<ignoreMissingFile>true</ignoreMissingFile>
						<file>.settings/org.eclipse.wst.common.project.facet.core.xml</file>
						<regex>false</regex>
						<replacements>
							<replacement>
								<token><![CDATA[<installed facet="jst.web" version="3.1" />]]></token>
								<value><![CDATA[<installed facet="jst.web" version="3.0" />]]></value>
							</replacement>
						</replacements>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<overlays>
						<overlay>
							<groupId>org.alfresco</groupId>
							<artifactId>share</artifactId>
							<excludes>
								<!-- Indique de ne pas exclure META-INF/MANIFEST.MF -->
							</excludes>
						</overlay>
					</overlays>
					<archive>
						<manifestFile>${project.build.directory}/share/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>de.fmaul</groupId>
					<artifactId>javascript-console-share</artifactId>
					<type>amp</type>
				</dependency>
			</dependencies>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
						<excludes>
							<exclude>**/*.ori</exclude>
						</excludes>
					</resource>
					<resource>
						<directory>src/main/dev-resources</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
				<plugins>
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<overlays>
								<overlay>
									<groupId>org.alfresco</groupId>
									<artifactId>share</artifactId>
									<excludes>
										<!-- Indique de ne pas exclure META-INF/MANIFEST.MF -->
									</excludes>
								</overlay>
								<overlay>
									<groupId>de.fmaul</groupId>
									<artifactId>javascript-console-share</artifactId>
									<type>amp</type>
								</overlay>
							</overlays>
						</configuration>
					</plugin>
				</plugins>
				<pluginManagement>
					<plugins>
						<plugin>
							<artifactId>maven-war-plugin</artifactId>
							<configuration>
								<failOnMissingWebXml>false</failOnMissingWebXml>
								<archive>
									<manifestFile>${project.build.directory}/m2e-wtp/overlays/share-${owsi-alfresco.share.alfresco.version}.war/META-INF/MANIFEST.MF</manifestFile>
								</archive>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		
		<profile>
			<id>livraison</id>
			<activation>
				<property>
					<name>livraison</name>
					<value>true</value>
				</property>
			</activation>
			<!-- Nothing to do -->
		</profile>
	</profiles>
		
</project>
