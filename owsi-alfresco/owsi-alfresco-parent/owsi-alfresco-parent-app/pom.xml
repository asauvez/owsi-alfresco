<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.alfresco</groupId>
		<artifactId>owsi-alfresco-parent</artifactId>
		<version>0.2.6</version>
	</parent>
	<artifactId>owsi-alfresco-parent-app</artifactId>
	<packaging>pom</packaging>

	<name>OWSI Alfresco - Parent - Application</name>
	<description>Définitions des dépendances pour le développement d'une application spécifique sur Alfresco</description>

	<properties>
		<owsi-alfresco.spring-security.version>4.0.1.RELEASE</owsi-alfresco.spring-security.version>
		
		<owsi-alfresco.owsi-core.version>0.9.8</owsi-alfresco.owsi-core.version>
		<owsi-alfresco.app.hibernate-jpamodelgen.version>4.3.7.Final</owsi-alfresco.app.hibernate-jpamodelgen.version>
		<owsi-alfresco.app.querydsl.version>3.4.3</owsi-alfresco.app.querydsl.version>
		
		<owsi-alfresco.spring-security-kerberos.version>1.0.0.RELEASE</owsi-alfresco.spring-security-kerberos.version>
		<owsi-alfresco.hibernate-validator.version>5.1.3.Final</owsi-alfresco.hibernate-validator.version>
		
		<owsi-alfresco.javax-el-api.version>3.0.0</owsi-alfresco.javax-el-api.version>
		<owsi-alfresco.webjars.jquery.version>2.1.4</owsi-alfresco.webjars.jquery.version>
		<owsi-alfresco.webjars.jquery-form.version>3.51</owsi-alfresco.webjars.jquery-form.version>
		<owsi-alfresco.webjars.jquery-placeholder.version>2.1.1</owsi-alfresco.webjars.jquery-placeholder.version>
		<owsi-alfresco.webjars.js-cookie.version>2.0.2</owsi-alfresco.webjars.js-cookie.version>
		<owsi-alfresco.webjars.bootstrap.version>3.3.5</owsi-alfresco.webjars.bootstrap.version>
		<owsi-alfresco.webjars.bootstrap-datepicker.version>1.4.0</owsi-alfresco.webjars.bootstrap-datepicker.version>
		<owsi-alfresco.webjars.select2.version>3.5.2-1</owsi-alfresco.webjars.select2.version>
		<owsi-alfresco.webjars.select2-bootstrap-css.version>1.4.6</owsi-alfresco.webjars.select2-bootstrap-css.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>fr.openwide.alfresco</groupId>
				<artifactId>owsi-alfresco-parent-bom</artifactId>
				<version>0.2.6</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>org.springframework.security</groupId>
				<artifactId>spring-security-bom</artifactId>
				<version>${owsi-alfresco.spring-security.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>fr.openwide.core.parents</groupId>
				<artifactId>owsi-core-parent-maven-configuration-core</artifactId>
				<version>${owsi-alfresco.owsi-core.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			
			<dependency>
				<groupId>fr.openwide.core.packages</groupId>
				<artifactId>owsi-core-package-core-spring-jpa-app</artifactId>
				<version>${owsi-alfresco.owsi-core.version}</version>
				<type>pom</type>
				<exclusions>
					<exclusion>
						<groupId>org.postgresql</groupId>
						<artifactId>postgresql</artifactId>
					</exclusion>
					<exclusion>
						<groupId>com.impossibl.pgjdbc-ng</groupId>
						<artifactId>pgjdbc-ng</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.hibernate</groupId>
						<artifactId>hibernate-search-orm</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.apache.solr</groupId>
						<artifactId>solr-core</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.springframework</groupId>
						<artifactId>spring-aspects</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.apache.poi</groupId>
						<artifactId>poi-ooxml</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>fr.openwide.core.packages</groupId>
				<artifactId>owsi-core-package-web-spring-security</artifactId>
				<version>${owsi-alfresco.owsi-core.version}</version>
				<type>pom</type>
			</dependency>
			<dependency>
				<groupId>org.springframework.security.kerberos</groupId>
				<artifactId>spring-security-kerberos-web</artifactId>
				<version>${owsi-alfresco.spring-security-kerberos.version}</version>
			</dependency>
			<dependency>
				<groupId>org.hibernate</groupId>
				<artifactId>hibernate-validator</artifactId>
				<version>${owsi-alfresco.hibernate-validator.version}</version>
			</dependency>
			
			<dependency>
				<groupId>javax.el</groupId>
				<artifactId>javax.el-api</artifactId>
				<version>${owsi-alfresco.javax-el-api.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>jquery</artifactId>
				<version>${owsi-alfresco.webjars.jquery.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>jquery-form</artifactId>
				<version>${owsi-alfresco.webjars.jquery-form.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>jquery-placeholder</artifactId>
				<version>${owsi-alfresco.webjars.jquery-placeholder.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>js-cookie</artifactId>
				<version>${owsi-alfresco.webjars.js-cookie.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>bootstrap</artifactId>
				<version>${owsi-alfresco.webjars.bootstrap.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>bootstrap-datepicker</artifactId>
				<version>${owsi-alfresco.webjars.bootstrap-datepicker.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>select2</artifactId>
				<version>${owsi-alfresco.webjars.select2.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>select2-bootstrap-css</artifactId>
				<version>${owsi-alfresco.webjars.select2-bootstrap-css.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>${owsi-core.maven-enforcer-plugin.version}</version>
				<executions>
					<execution>
						<id>enforce</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<DependencyConvergence />
								<bannedDependencies>
									<excludes>
										<exclude>org.springframework:spring</exclude>
										<exclude>org.springframework:spring-ldap</exclude>
										<exclude>commons-logging:commons-logging</exclude>
										<exclude>cglib:cglib</exclude>
										<exclude>rhino:rhino</exclude>
										<exclude>rhino:js</exclude>
										<exclude>javassist:javassist</exclude>
										<exclude>xml-apis:xml-apis</exclude>
										<exclude>apache-xerces:xml-apis</exclude>
										<exclude>javax.servlet:servlet-api</exclude> <!-- Replace by javax.servlet:javax.servlet-api -->
										<exclude>net.sf.ehcache:ehcache-core</exclude>
										<exclude>postgresql:postgresql</exclude> <!-- Replace by org.postgresql:postgresql -->
									</excludes>
								</bannedDependencies>
								<requireMavenVersion>
									<version>[${minimal.maven.version},)</version>
								</requireMavenVersion>
								<requireJavaVersion>
									<version>${jdk.version}</version>
								</requireJavaVersion>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.bsc.maven</groupId>
					<artifactId>maven-processor-plugin</artifactId>
					<dependencies>
						<dependency>
							<groupId>org.hibernate</groupId>
							<artifactId>hibernate-jpamodelgen</artifactId>
							<version>${owsi-alfresco.app.hibernate-jpamodelgen.version}</version>
						</dependency>
						<dependency>
							<groupId>com.mysema.querydsl</groupId>
							<artifactId>querydsl-apt</artifactId>
							<version>${owsi-alfresco.app.querydsl.version}</version>
						</dependency>
					</dependencies>
					<configuration>
						<outputDirectory>${generated-sources.directory}</outputDirectory>
						<options>
							<fullyAnnotationConfigured>true</fullyAnnotationConfigured>
							<addSuppressWarningsAnnotation>true</addSuppressWarningsAnnotation>
						</options>
						<processors>
							<processor>org.hibernate.jpamodelgen.JPAMetaModelEntityProcessor</processor>
							<processor>com.mysema.query.apt.jpa.JPAAnnotationProcessor</processor>
						</processors>
					</configuration>
					<executions>
						<execution>
							<id>maven-processor-plugin-default</id>
							<phase>generate-sources</phase>
							<goals>
								<goal>process</goal>
							</goals>
						</execution>
						<execution>
							<id>maven-processor-plugin-default-test</id>
							<phase>generate-test-sources</phase>
							<goals>
								<goal>process-test</goal>
							</goals>
							<configuration>
								<outputDirectory>${generated-sources-test.directory}</outputDirectory>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>wagon-maven-plugin</artifactId>
					<version>${owsi-core.wagon-maven-plugin.version}</version>
					<dependencies>
						<dependency>
							<groupId>org.apache.maven.wagon</groupId>
							<artifactId>wagon-ssh-external</artifactId>
							<version>${owsi-core.wagon-ssh-external-plugin.version}</version>
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>
