<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.core.parents</groupId>
		<artifactId>owsi-core-parent-base</artifactId>
		<version>0.8.6-SNAPSHOT</version>
	</parent>

	<groupId>fr.openwide.alfresco</groupId>
	<artifactId>owsi-alfresco-parent-app</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>OWSI Alfresco - Parent - App</name>
	<description>Définitions des dépendances pour le développement d'une application spécifique sur Alfresco</description>

	<properties>
		<jdk.version>1.7</jdk.version>
		
		<owsi-alfresco.owsi-core.version>0.8.6-SNAPSHOT</owsi-alfresco.owsi-core.version>
		
		<owsi-alfresco.alfresco.version>4.2.0</owsi-alfresco.alfresco.version>
		
		<owsi-alfresco.hibernate-validator.version>5.0.1.Final</owsi-alfresco.hibernate-validator.version>
		
		<owsi-alfresco.javax-el-api.version>3.0.0</owsi-alfresco.javax-el-api.version>
		<owsi-alfresco.webjars.jquery.version>1.10.2-1</owsi-alfresco.webjars.jquery.version>
		<owsi-alfresco.webjars.bootstrap.version>3.0.0</owsi-alfresco.webjars.bootstrap.version>
		<owsi-alfresco.webjars.bootstrap-datepicker.version>1.2.0</owsi-alfresco.webjars.bootstrap-datepicker.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>fr.openwide.alfresco</groupId>
				<artifactId>owsi-alfresco-parent-bom</artifactId>
				<version>0.1.0-SNAPSHOT</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			
			<dependency>
				<groupId>fr.openwide.core.packages</groupId>
				<artifactId>owsi-core-package-core-spring-jpa-app</artifactId>
				<version>${owsi-alfresco.owsi-core.version}</version>
				<type>pom</type>
				<exclusions>
					<exclusion>
						<groupId>postgresql</groupId>
						<artifactId>postgresql</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.hibernate</groupId>
						<artifactId>hibernate-search-orm</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.apache.solr</groupId>
						<artifactId>solr-core</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.springframework</groupId>
						<artifactId>spring-aspects</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.apache.poi</groupId>
						<artifactId>poi-ooxml</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>fr.openwide.core.packages</groupId>
				<artifactId>owsi-core-package-web-spring-security</artifactId>
				<version>${owsi-alfresco.owsi-core.version}</version>
				<type>pom</type>
			</dependency>
		
			<dependency>
				<groupId>org.alfresco</groupId>
				<artifactId>alfresco-jlan-embed</artifactId>
				<version>${owsi-alfresco.alfresco.version}</version>
				<exclusions>
					<exclusion>
						<groupId>org.alfresco</groupId>
						<artifactId>alfresco-core</artifactId>
					</exclusion>
					<exclusion>
						<groupId>com.hazelcast</groupId>
						<artifactId>hazelcast</artifactId>
					</exclusion>
					<exclusion>
						<groupId>com.hazelcast</groupId>
						<artifactId>hazelcast-spring</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			
			<dependency>
				<groupId>org.hibernate</groupId>
				<artifactId>hibernate-validator</artifactId>
				<version>${owsi-alfresco.hibernate-validator.version}</version>
			</dependency>
			
			<dependency>
				<groupId>javax.el</groupId>
				<artifactId>javax.el-api</artifactId>
				<version>${owsi-alfresco.javax-el-api.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>jquery</artifactId>
				<version>${owsi-alfresco.webjars.jquery.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>bootstrap</artifactId>
				<version>${owsi-alfresco.webjars.bootstrap.version}</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>bootstrap-datepicker</artifactId>
				<version>${owsi-alfresco.webjars.bootstrap-datepicker.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<proc>none</proc>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
		<repository>
			<id>nexus-owsi-core</id>
			<name>OWSI Core</name>
			<url>http://projects.openwide.fr/services/nexus/content/repositories/owsi-core</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>nexus-owsi-core-snapshots</id>
			<name>OWSI Core Snapshots</name>
			<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core-snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
		<repository>
			<id>alfresco-enterprise</id>
			<name>Alfresco Enterprise Artifacts</name>
			<url>https://artifacts.alfresco.com/nexus/content/groups/private</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

</project>