<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.alfresco</groupId>
		<artifactId>owsi-alfresco-parent-sdk4</artifactId>
		<version>0.9.2-SNAPSHOT</version>
		<relativePath>../owsi-alfresco-parent-sdk4/pom.xml</relativePath>
	</parent>
	<artifactId>owsi-alfresco-parent-sdk4-plus</artifactId>

	<name>OWSI Alfresco - Parent SDK4 plus</name>
	<description>Parent des projets utilisant le all-in-on, avec différents plugins présinstallé</description>
	<packaging>pom</packaging>

	<properties>
		<alfresco.module.name>${project.artifactId}</alfresco.module.name>
	</properties>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<excludes>
					<exclude>**/*.ori</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/config</directory>
				<targetPath>alfresco/module/${alfresco.module.name}</targetPath>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/dev-resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/web-resources</directory>
				<targetPath>META-INF/resources</targetPath>
			</resource>
		</resources>
		
		<plugins>
			<plugin>
				<!-- Génére un fichier git.properties dans les JAR avec des informations sur la compilation -->
				<groupId>pl.project13.maven</groupId>
				<artifactId>git-commit-id-plugin</artifactId>
				<version>4.0.0</version>
				<executions>
					<execution>
						<id>get-the-git-infos</id>
						<goals>
							<goal>revision</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<generateGitPropertiesFile>true</generateGitPropertiesFile>
				</configuration>
			</plugin>
			<plugin>
				<!-- Permet de générer des WS avec une annotation -->
				<groupId>org.bsc.maven</groupId>
				<artifactId>maven-processor-plugin</artifactId>
				<version>3.3.3</version>
				<executions>
					<execution>
						<id>maven-processor-plugin-default</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>process</goal>
						</goals>
						<configuration>
							<processors>
								<processor>fr.openwide.alfresco.repo.wsgenerator.processor.GenerateWebScriptAnnotationProcessor</processor>
							</processors>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>fr.openwide.alfresco</groupId>
						<artifactId>owsi-alfresco-repo-wsgenerator-processor</artifactId>
						<version>0.9.2-SNAPSHOT</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<!-- Aide à la migration des surcharges de Alfresco -->
				<groupId>fr.openwide.alfresco</groupId>
				<artifactId>owsi-alfresco-repo-migration-maven-plugin</artifactId>
				<version>0.9.2-SNAPSHOT</version>
				<executions>
					<execution>
						<id>migration-maven-plugin</id>
						<phase>compile</phase>
						<goals>
							<goal>migration</goal>
						</goals>
						<configuration>
							<enabled>${owsi.migration.enabled}</enabled>
							<createMissingFile>${owsi.migration.createMissingFile}</createMissingFile>
							<createMissingIgnoreFile>${owsi.migration.createMissingIgnoreFile}</createMissingIgnoreFile>
							<deleteIdenticalResources>${owsi.migration.deleteIdenticalResources}</deleteIdenticalResources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<!-- GitFlow -->
					<groupId>com.amashchenko.maven.plugin</groupId>
					<artifactId>gitflow-maven-plugin</artifactId>
					<version>1.14.0</version>
					<configuration>
						<gitFlowConfig>
							<developmentBranch>dev</developmentBranch>
							<featureBranchPrefix>ft-</featureBranchPrefix>
							<releaseBranchPrefix>rl-</releaseBranchPrefix>
							<hotfixBranchPrefix>hf-</hotfixBranchPrefix>
						</gitFlowConfig>
					</configuration>
				</plugin>
 			</plugins>
		</pluginManagement>
	</build>

	<!--This plugin's configuration is used to store Eclipse m2e settings only. 
		It has no influence on the Maven build itself. -->
	<profiles>
		<profile>
			<id>only-eclipse</id>
			<activation>
				<property>
					<name>m2e.version</name>
				</property>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.eclipse.m2e</groupId>
							<artifactId>lifecycle-mapping</artifactId>
							<version>1.0.0</version>
							<configuration>
								<lifecycleMappingMetadata>
									<pluginExecutions>
										<pluginExecution>
											<pluginExecutionFilter>
												<groupId>fr.openwide.alfresco</groupId>
												<artifactId>owsi-alfresco-repo-migration-maven-plugin</artifactId>
												<versionRange>[0.8.5,)</versionRange>
												<goals>
													<goal>migration</goal>
												</goals>
											</pluginExecutionFilter>
											<action>
												<ignore></ignore>
											</action>
										</pluginExecution>
									</pluginExecutions>
								</lifecycleMappingMetadata>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

	<repositories>
		<repository>
			<id>alfresco-artifacts-repository</id>
			<url>https://artifacts.alfresco.com/nexus/content/groups/private/</url>
		</repository>
		<repository>
			<id>nexus.internal.releases</id>
			<url>https://nexus.galaxy.intranet/content/repositories/InternalSmileReleases/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>nexus.internal.snapshots</id>
			<url>https://nexus.galaxy.intranet/content/repositories/InternalSmileSnapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>

		<repository>
			<id>nexus.internal.third-party</id>
			<url>https://nexus.galaxy.intranet/content/repositories/nonCentralArtifacts/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>nexus.internal.releases</id>
			<url>https://nexus.galaxy.intranet/content/repositories/InternalSmileReleases/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
		<pluginRepository>
			<id>nexus.internal.snapshots</id>
			<url>https://nexus.galaxy.intranet/content/repositories/InternalSmileSnapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>
</project>
