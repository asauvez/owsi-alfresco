<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
    <config evaluator="model-type" condition="dlauthority:item">
        <forms>
            <!-- Create item form -->
            <form>
                <field-visibility>
                    <show id="dlauthority:authorityMember" />
                    <show id="dlauthority:name"></show>
                </field-visibility>
                <create-form template="../data-lists/forms/dataitem.ftl" />
                <appearance>
                </appearance>
            </form>
        </forms>
    </config>

    <config evaluator="node-type" condition="dlauthority:item">
        <forms>
        	<!--Edit item form-->
            <form>
                <field-visibility>
                    <hide id="dlauthority:authorityMember" />
                </field-visibility>
                <edit-form template="../data-lists/forms/dataitem.ftl" />
                <appearance>
                </appearance>
            </form>
        </forms>
    </config>
</alfresco-config>