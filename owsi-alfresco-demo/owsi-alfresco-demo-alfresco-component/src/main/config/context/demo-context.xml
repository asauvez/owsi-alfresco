<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING/DTD BEAN//EN"
   "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="owsi-alfresco.demo-service" class="fr.openwide.alfresco.demo.repo.service.DemoClassificationServiceImpl" depends-on="demo.dictionaryBootstrap" >
		<property name="classificationService" ref="owsi.service.classificationService"/>
		<property name="policy">
			<bean class="fr.openwide.alfresco.demo.repo.service.DemoClassificationPolicy"/>
		</property>
	</bean>

	<bean id="demo.dictionaryBootstrap" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${alfresco.module.name}/model/demoModel.xml</value>
			</list>
		</property>
	</bean>
	
	<bean id="demo.resourceBundle" class="org.alfresco.i18n.ResourceBundleBootstrapComponent">
		<property name="resourceBundles">
			<list>
				<value>alfresco.module.${alfresco.module.name}.model.demoModel</value>
			</list>
		</property>
	</bean>
	
</beans>
